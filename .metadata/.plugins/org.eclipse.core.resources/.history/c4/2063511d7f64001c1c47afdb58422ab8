
function getInfo(){
	var chk=$("input[name='check']");
	var ordInfo=$("div[id='ordInfo']");
	
	if(chk.checked){
		//ordInfo.slideDown();
		var name = document.querySelector("#mem_name").value;  //입력한 주문자명
        var phone = document.querySelector("#mem_phone").value; //입력한 주문고객 연락처
        var addr1 = document.querySelector("#mem_addr1").value; //입력한 주문고객 주소
        var addr2 =document.querySelector("#mem_addr2").value;
        var addr3 =document.querySelector("#mem_addr3").value;
        
        document.querySelector("#mem_name").value = name;
        document.querySelector("#shippingPhoneNumber").value = phone;
        document.querySelector("#shippingAddress").value = addr1;
    }
    else { //체크해제한 경우 -> 배송지 정보를 비워주기
        document.querySelector("#shippingName").value = "";
        document.querySelector("#shippingPhoneNumber").value = "";
        document.querySelector("#shippingAddress").value = "";
    }
	
	/*var ordInfo=document.getElementById("ordInfo");
	if(chk.checked){
		ordInfo.style.display = 'none';
	}else{
		ordInfo.style.display = 'block';
	}*/
}