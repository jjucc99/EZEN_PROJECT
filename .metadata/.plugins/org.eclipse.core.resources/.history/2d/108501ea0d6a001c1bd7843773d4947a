function reviewToggle(r_board_no){
	var no=document.getElementById(r_board_no)
	
	if(no.style.display=='none'){
		no.style.display = 'block';
	}else{
		no.style.display = 'none';
	}
	
	/* var list = $("[name='review_context']");
	for (var i = 0; i < list.length; i++) {
