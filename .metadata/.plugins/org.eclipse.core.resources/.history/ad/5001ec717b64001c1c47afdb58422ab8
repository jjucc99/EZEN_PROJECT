
function getInfo(){
	var chk=$("input[name='check']");
	var ordInfo=$("div[id='ordInfo']");
	
	if(chk.checked){
		ordInfo.slideDown();
		//$("input[name='ord_receiver'").value=$("input[name='mem_name'").value;
		//document.getElementById("ord_receiver").value=document.getElementById("mem_name").value;
		frm.ord_receiver.value=$("input[id='mem_id']");
		frm.ord_phone.value=frm.mem_phone.value;
		frm.ord_addr1.value=frm.addr1.value;
		frm.ord_addr2.value=frm.addr2.value;
		frm.ord_addr3.value=frm.addr3.value;
	}else{
		ordInfo.slideToggle();
	}
	
	/*var ordInfo=document.getElementById("ordInfo");
	if(chk.checked){
		ordInfo.style.display = 'none';
	}else{
		ordInfo.style.display = 'block';
	}*/
}