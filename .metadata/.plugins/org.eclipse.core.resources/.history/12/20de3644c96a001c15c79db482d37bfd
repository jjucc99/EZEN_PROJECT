		<div style="display: block; text-align: center;">
			<c:if test="${paging.startPage != 1 }">
				<a
					href="/qnaList.board?nowPage=${paging.startPage - 1}">&lt;</a>
			</c:if>
			<c:forEach begin="${paging.startPage }" end="${paging.endPage}"
				var="p">
				<c:choose>
					<c:when test="${p == paging.nowPage }">
						<b>${p}</b>
					</c:when>
					<c:when test="${p != paging.nowPage }">
						<a
							href="/qnaList.board?nowPage=${p}">${p}</a>
					</c:when>
				</c:choose>
			</c:forEach>
			<c:if test="${paging.endPage != paging.lastPage}">
				<a
					href="/qnaList.board?nowPage=${paging.endPage+1}">&gt;</a>
			</c:if>
		</div>
