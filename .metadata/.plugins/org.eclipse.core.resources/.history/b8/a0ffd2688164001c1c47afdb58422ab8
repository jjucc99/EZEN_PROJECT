
function getInfo(){
	var chk=$("input[name='check']");
	var ordInfo=$("div[id='ordInfo']");
	
	var name=document.getElementById("mem_name").value;
	
	
	if(chk.checked){
		//ordInfo.slideDown();
		alert(name);
		document.getElementsByName("ord_receiver")[0].value=name;
		document.getElementsByName("ord_phone")[0].value=name;
		document.getElementsByName("ord_addr1")[0].value=name;
		document.getElementsByName("ord_addr2")[0].value=name;
		document.getElementsByName("ord_addr3")[0].value=name;
    }
    else { //체크해제한 경우 -> 배송지 정보를 비워주기
       
    }
}