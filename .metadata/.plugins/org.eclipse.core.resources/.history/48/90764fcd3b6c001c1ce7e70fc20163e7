	<script type="text/javascript">
	function checkSubmit() {
        var board_sub = document.getElementsByName('board_sub')[0].value;
        var board_content = document.getElementsByName('board_content')[0].value;
        if(!board_sub){
        	alert("제목을 입력하세요");
        	board_sub.focus();
        	return false;
        }
        if(!board_content){
        	alert("내용을 입력하세요");
        	board_content.focus();
        	return false;
        }
        frm.method = 'post';
        frm.submit();
      }
	
	</script>
